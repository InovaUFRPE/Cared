<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nomeIdosoRendimentos"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Nome do Idoso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dataTrabalhoRendimentos"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="112dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="01/01/2018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeIdosoRendimentos" />

    <TextView
        android:id="@+id/simboloReal"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="33dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="R$"
        app:layout_constraintStart_toEndOf="@+id/dataTrabalhoRendimentos"
        app:layout_constraintTop_toBottomOf="@+id/nomeIdosoRendimentos" />

    <TextView
        android:id="@+id/valorRendimentos"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="93dp"
        android:layout_height="22dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="76dp"
        android:text="120,00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/simboloReal"
        app:layout_constraintTop_toBottomOf="@+id/nomeIdosoRendimentos" />


</android.support.constraint.ConstraintLayout>