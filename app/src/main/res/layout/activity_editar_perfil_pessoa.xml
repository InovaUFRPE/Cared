<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pessoa.gui.EditarPerfilPessoaActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dados Pessoais"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:id="@+id/fotoPessoaEditar"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/profile" />

            <Button
                android:id="@+id/botaoEditarFotoPessoa"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/colorButton"
                android:text="Escolher foto"
                android:textColor="@color/colorTextButton" />
            <EditText
                android:id="@+id/nomeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome Completo"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/telefoneId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefone"
                android:layout_marginTop="5dp"
                android:inputType="number|phone"/>
            <EditText
                android:id="@+id/necessidadesId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Necessidades"
                android:layout_marginTop="5dp" />
            <Button
                android:id="@+id/atualizarId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atualizar"
                android:background="@color/colorButton"
                android:textColor="@color/colorTextButton"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>