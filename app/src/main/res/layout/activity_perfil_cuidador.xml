<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cuidador.gui.PerfilCuidadorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nomeCuidadorPerfilId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do cabra"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cidade: "
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/cidadeCuidadorPerfilId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cidade do cabra"
                android:textSize="15dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Descrição"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/descricaoCuidadorPerfilId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição do cabra"
            android:textSize="15dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>