<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cuidador.gui.EditarPerfilCuidadorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dados Pessoais"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"/>
            <EditText
                android:id="@+id/nomeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome Completo"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/cpfId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CPF"
                android:layout_marginTop="5dp"
                android:inputType="number"/>
            <EditText
                android:id="@+id/telefoneId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefone"
                android:layout_marginTop="5dp"
                android:inputType="number|phone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"/>
            <EditText
                android:id="@+id/ruaId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rua"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/numeroId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/cidadeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cidade"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Serviço"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"/>
            <EditText
                android:id="@+id/precoId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Valor/hora"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/servicoId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descreva aqui o seu serviço"
                android:layout_marginTop="5dp"/>
            <Button
                android:id="@+id/confirmarId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atualizar"
                android:background="@color/colorButton"
                android:textColor="@color/colorTextButton"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>